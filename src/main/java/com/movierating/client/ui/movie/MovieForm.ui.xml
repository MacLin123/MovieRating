<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        img:hover {
            cursor: pointer;
        }

        ul {
            padding: 0;
            list-style-type: none;
        }

        .center {
            display: flex;
            align-items: flex-start;
            justify-content: flex-start;
            flex-direction: column;
            height: 100%;
            width: 100%;
        }

        .admin-form {
            background-color: #FFFFFF;
            width: 100%;
            height: 80%;
        }

        .header {
            text-align: center;
            margin: 0;
            width: 80%;
            padding-bottom: 20px;
            padding-top: 40px;
        }


        .input-group {
            /*display: flex;*/
            width: 80%;
            padding: 0 0 20px 20px;
            flex-direction: row;
            display: flow-root;
            align-items: flex-start;
            /*margin: 0 auto;*/
            /*transition: width 0.1s ease-in-out;*/
        }

        .button-group {
            width: 80%;
            padding: 20px 0 20px 20px;
            flex-direction: row;
            display: flex;
            text-align: center;
            justify-content: center;
        }


        .input-group-text {
            width: 100%;
            padding: 12px 20px;
            font-size: 17px;
            border: 1px solid grey;
            float: left;
            margin: 8px 0;
            box-sizing: border-box;

            -webkit-transition: all 0.30s ease-in-out;
            -moz-transition: all 0.30s ease-in-out;
            -ms-transition: all 0.30s ease-in-out;
            -o-transition: all 0.30s ease-in-out;
            outline: none;
            padding: 3px 0px 3px 3px;
            margin: 5px 1px 3px 0px;
            border: 1px solid #DDDDDD;

        }

        .input-group-text:focus {
            box-shadow: 0 0 5px rgba(81, 203, 238, 1);
            padding: 3px 0px 3px 3px;
            margin: 5px 1px 3px 0px;
            border: 1px solid rgba(81, 203, 238, 1);
        }

        /*.button-group {*/
        /*    float:inherit;*/
        /*    !*margin-right: 20%;*!*/
        /*}*/

        .input-button-group {
            padding: 0.375rem 0.75rem;
            color: #ffffff;
            background-color: #2196f3;
            border: none;
            border: 1px solid #0275d8;
            border-radius: 0 .25rem .25rem 0;
            cursor: pointer;
            margin-left: 10px;
            width: 20%;
        }


        .input-button-group:hover {
            background-color: #025aa5;
            border-color: #01549b;
        }

        .input-button-group:active {
            background-color: #014682;
            border-color: #01315a;
        }

        .input-button-group-remove {
            background-color: #FE0001;
            border: 1px solid #e30d0d;
        }

        .input-button-group-remove:hover {
            background-color: #cb0000;
            border-color: #98000d;
        }

        .input-button-group-remove:active {
            background-color: #772222;
            border-color: #5d0000;
        }


        .label-group {
            display: inherit;
            margin: 0;
        }

        .input-group-date {
            width: 30%;
        }

        .inputfile {
            width: 0.1px;
            height: 0.1px;
            opacity: 0;
            overflow: hidden;
            position: absolute;
            z-index: -1;
        }

        .inputfile + label {
            font-size: 1.25em;
            font-weight: 700;
            color: white;
            background-color: black;
            display: inline-block;
        }

        .inputfile:focus + label,
        .inputfile + label:hover {
            background-color: red;
        }

        .input-file {
            /*display: flex;*/
            width: 80%;
            padding: 0 0 0 20px;
            flex-direction: row;
            /*margin: 0 auto;*/
            /*transition: width 0.1s ease-in-out;*/
        }

        .char-label {
            text-align: right;
            padding: 0;
        }


    </ui:style>
    <g:HTMLPanel addStyleNames="{style.center}">
        <div class="{style.admin-form}">
            <h1 ui:field="header" class="{style.header}"></h1>
            <div class="{style.input-group}">
                <label class="{style.label-group}">Title</label>
                <g:TextBox ui:field="movieTitleTextBox" maxLength="255" addStyleNames="{style.input-group-text}"/>
                <g:Label ui:field="movieTitleChars" addStyleNames="{style.char-label}">0/255</g:Label>
            </div>
            <div class="{style.input-group}">
                <label class="{style.label-group}">Description</label>
                <g:TextArea ui:field="movieDescrTextArea" addStyleNames="{style.input-group-text}"/>
                <g:Label ui:field="movieDescrChars" addStyleNames="{style.char-label}">0/500</g:Label>
            </div>
            <div class="{style.input-group}">
                <label class="{style.label-group}">Genres</label>
                <g:TextBox maxLength="255" ui:field="movieGenreTextBox" addStyleNames="{style.input-group-text}"/>
                <g:Label ui:field="movieGenreChars" addStyleNames="{style.char-label}">0/255</g:Label>
            </div>
            <div class="{style.input-group}">
                <label class="{style.label-group}">Date</label>
                <input ui:field="dateElem" class="{style.input-group-text} {style.input-group-date}" type="date"
                       value="2017-06-01"></input>
            </div>

            <div class="{style.input-group}">
                <label class="{style.label-group}">Cover photo</label>
                <g:Image ui:field="coverImg"/>
            </div>

            <div class="{style.input-file}">
                <g:FormPanel ui:field="formPanel">
                    <g:FileUpload name="file" ui:field="fileUpload"/>
                </g:FormPanel>
            </div>

            <div class="{style.button-group}">
                <g:Button ui:field="submitMovieBtn" addStyleNames="{style.input-button-group}">Submit</g:Button>
                <g:Button ui:field="removeMovieBtn"
                          addStyleNames="{style.input-button-group} {style.input-button-group-remove}">Remove
                </g:Button>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>