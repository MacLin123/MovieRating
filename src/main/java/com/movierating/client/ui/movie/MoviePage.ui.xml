<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .score-panel-wrap {
            padding: 0;
            position: relative;
            margin-bottom: 25px;
        }

        .cover-wrap {
            display: grid;
            grid-template-columns:320px 1fr;
            grid-gap: 0;
        }

        /*.mop-ratings-wrap.score_panel {*/
        /*    margin: 0;*/
        /*    min-height: 0;*/
        /*}*/

        .mop-ratings-wrap {
            font-family: "Open Sans", Arial, "Trebuchet MS", Verdana, sans-serif;
            background: #efefef;
            position: relative;
            line-height: 1.2;
            margin-bottom: 15px;
            border-bottom: 3px solid #fff;
            padding-bottom: 25px;
            margin-left: 0px;

            height: 480px;
        }


        .mop-ratings-wrap__title_top {
            font-family: "Open Sans", Arial, "Trebuchet MS", Verdana, sans-serif;
            position: relative;
            left: 50px;
            letter-spacing: 0.5px;
            /*transform: translateX(-10%);*/
            display: flex;
            flex-wrap: nowrap;
            padding: 80px 10px 0;
            margin: 0;
            max-width: 75%;
        }

        .movie-page-styles {
            margin-top: 50px;
        }

        .coverLargeImage {
            width: 320px;
            height: 480px;
        }

        .header-line {
            display: flex;
            align-items: center;
            text-align: center;
        }

        .header-line::before, .separator::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #000;
        }

        .header-line::before {
            margin-right: .25em;
        }

        .header-line::after {
            margin-left: .25em;
        }


        .infoDiv {
            padding-top: 50px;
        }
        .release_year{
            opacity: 0.8;
            font-weight: 400;
        }
        .title_text{
            white-space: nowrap;
            color: #000;
            font-weight: 700;
            width: 100%;
            font-size: 2.2rem;
        }
        .title_span{
            padding-right: 10px;
        }

    </ui:style>

    <ui:style type="com.movierating.client.resources.styles.MovieScoreStyle"
              field="movieScoreStyle" src="../../resources/staticfiles/css/MovieScore.css"/>

    <g:HTMLPanel addStyleNames="{style.movie-page-styles}">
        <div class="{style.score-panel-wrap} {style.cover-wrap}">
            <g:Image addStyleNames="{style.coverLargeImage}" ui:field="coverMedium"></g:Image>
            <div class="{style.mop-ratings-wrap} {style.score-panel-wrap}">
                <div class="{style.title_text} {style.mop-ratings-wrap__title_top}">
                    <span class="{style.title_span}">Citizen Kane</span>
                    <span class="{style.release_year}">(2021)</span>
                </div>
                <div class="{style.infoDiv}" >
                    <div ui:field="ratingDiv" class=" {movieScoreStyle.moviescore_w} {movieScoreStyle.larger}">
                </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>