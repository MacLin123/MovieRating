<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .movie-info {
            width: 585px;
            text-align: -webkit-match-parent;

        }

        .movie-info td {
            border: none;
            padding: 2px;

        }

        .movie-info-name {
            color: #000;
            font-weight: 600;
            font-family: "Franklin Gothic", -apple-system, BlinkMacSystemFont, "PT Sans", Arial, Sans-Serif;
            text-decoration: none;
        }

        .movie-description {
            display: block;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.movie-info}">
        <g:HorizontalPanel>
            <g:Label ui:field="title" addStyleNames="{style.movie-info-name}"/>
            <g:Label ui:field="year"/>
        </g:HorizontalPanel>
        <g:Label ui:field="description" addStyleNames="{style.movie-description}"/>
    </g:HTMLPanel>
</ui:UiBinder>