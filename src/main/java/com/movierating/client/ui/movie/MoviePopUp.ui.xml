<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        body, html {
            font-family: 'Roboto', sans-serif;
            font-size: 16px;
            line-height: 24px;
            width: 100%;
            height: 100%;
            margin: 0;
            background-color: #E9EAED;
        }

        ul {
            padding: 0;
            list-style-type: none;
        }

        .center {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            height: 100%;
            width: 100%;
        }

        .admin-panel {
            background-color: #FFFFFF;
            width: 480px;
            padding: 20px;
            box-shadow: 0 0 10px 1px #C9C9C9;
            border-radius: .25rem
        }

        .header {
            text-align: center;
            margin: 0;
            padding-bottom: 20px;
        }

        .header2 {
            text-align: center;
            margin: 0;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .input-group {
            display: flex;
            width: 100%;
            padding-top: 20px;
            flex-direction: row;
        }

        .input-group-text {
            width: 100%;
            border: 1px solid #CCC;
            padding: .375rem .75rem;
            border-radius: .25rem 0 0 .25rem;
            border-right: 0;
        }

        .input-group-button {
            width: 100%;
            padding: 0.375rem 0.75rem;
            color: #ffffff;
            background-color: #0b7edd;
            border: none;
            border: 1px solid #0275d8;
            border-radius: 0 .25rem .25rem 0;
            cursor: pointer;
        }

        .input-group-search-button {
            padding: 0.375rem 0.75rem;
            color: #ffffff;
            background-color: #0b7edd;
            border: none;
            border: 1px solid #0275d8;
            border-radius: 0 .25rem .25rem 0;
            cursor: pointer;
        }

        .input-group-search-button:hover{
            background-color: #025aa5;
            border-color: #01549b;
        }

        .input-group-button:hover {
            background-color: #025aa5;
            border-color: #01549b;
        }

        .input-group-button:active {
            background-color: #014682;
            border-color: #01315a;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.center}">
        <div class="{style.admin-panel}">
            <h1 class="{style.header}">Update Movie</h1>

            <div class="{style.input-group}">
                <g:TextBox ui:field="movieTitleTextBox" addStyleNames="{style.input-group-text}"/>
            </div>

            <div class="{style.input-group}">
                <g:TextBox ui:field="movieGenreTextBox" addStyleNames="{style.input-group-text}"/>
            </div>

            <div class="{style.input-group}">
                <g:TextArea ui:field="movieDescrTextArea" addStyleNames="{style.input-group-text}"/>
            </div>

            <div class="{style.input-group}">
                <g:TextBox ui:field="movieDateTextBox" addStyleNames="{style.input-group-text}"/>
            </div>

            <div class="{style.input-group}">
                <g:Button ui:field="updateMovieBtn" addStyleNames="{style.input-group-button}">Update</g:Button>
            </div>

            <div class="{style.input-group}">
                <g:Button ui:field="removeMovieBtn" addStyleNames="{style.input-group-button}">Remove</g:Button>
            </div>
            <div class="{style.input-group}">
                <g:Button ui:field="closePopUpBtn" addStyleNames="{style.input-group-button}"></g:Button>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>