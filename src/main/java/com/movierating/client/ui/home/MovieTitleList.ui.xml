<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type="com.movierating.client.ui.home.MovieTitleList.MyStyle">
        .viewAllButton {
            text-transform: uppercase;
            background: none !important;
            border: none;
            padding: 0 !important;
            cursor: pointer;

            background-color: transparent;
            color: #3976dc;
            fill: #2a2c32;
            font-size: inherit;
            font-weight: 400;
            line-height: inherit;
            letter-spacing: inherit;
            text-decoration: none;
            cursor: pointer;
        }

        .h2 {
            font-family: "Open Sans", Arial, "Trebuchet MS", Verdana, sans-serif;
            font-weight: 500;
            font-size: 1.25rem;
            letter-spacing: 0;
            line-height: 1.2;
            padding-left: 9px;
            text-transform: uppercase;
            margin-bottom: 1em;
            width: 80%;
        }

        .releases-header {
            text-align: left;
            margin: 0;
            width: 100%;
            margin-bottom: 7px;
            /*padding-bottom: 20px;*/
            padding-top: 40px;
        }

        .best-movies-list {
            padding: 2px;
            margin-bottom: 6px;
            width: 100%;
        }

        .best-movies-list thead,tbody, tr {
            width: 80%;
        }

        .best-movies-list-cell-global {
            text-align: left;
            width: 10%;
        }

        .best-movies-list-cell-title {
            text-align: left;
            width: 80%;
        }


    </ui:style>
    <g:HTMLPanel>
        <h2 ui:field="bestMoviesHeader" class="{style.releases-header} {style.h2}">Best Movies
            <g:Button addStyleNames="{style.viewAllButton}" ui:field="viewAllCur">View all</g:Button>
        </h2>
        <g:FlexTable addStyleNames="{style.best-movies-list}" ui:field="bestMoviesTable">
        </g:FlexTable>
        <!--        <g:VerticalPanel addStyleNames="{style.best-movies-list}" ui:field="bestMoviesPanel"></g:VerticalPanel>-->
    </g:HTMLPanel>
</ui:UiBinder>