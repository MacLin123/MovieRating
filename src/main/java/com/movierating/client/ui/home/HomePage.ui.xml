<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.movierating.client.ui.home'>
    <ui:style type="com.movierating.client.ui.home.HomePage.MyStyle">
        .carousel-home {
            padding-top: 100px;
        }

        .releases-header {
            text-align: center;
            margin: 0;
            width: 80%;
            padding-bottom: 20px;
            padding-top: 40px;
        }

        .movie-lists {
            width: 80%;
            padding-left: 36px;
        }


        .glider-style {
            width: 70%;
            max-width: 920px;
            margin: 20px 0 20px 20px;
        }

        .first_td {
            padding-right: 50px;
        }
    </ui:style>
    <g:HTMLPanel>
        <my:PosterMovieCarousels ui:field="newReleaseMovies">
        </my:PosterMovieCarousels>
        <my:PosterMovieCarousels ui:field="upcomingReleaseMovies">
        </my:PosterMovieCarousels>

        <g:HorizontalPanel addStyleNames="{style.movie-lists}">
            <my:MovieTitleList addStyleNames="{style.first_td}" ui:field="prevYearMovieList">
            </my:MovieTitleList>

            <my:MovieTitleList ui:field="curYearMovieList">
            </my:MovieTitleList>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>