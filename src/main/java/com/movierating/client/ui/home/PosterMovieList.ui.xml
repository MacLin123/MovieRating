<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .carousel-home {
            padding-top: 100px;
        }

        .releases-header {
            text-align: left;
            margin: 0;
            width: 80%;
            margin-bottom: 7px;
            /*padding-bottom: 20px;*/
            padding-top: 40px;
        }
        .home-panel{
            padding-left: 16px;
            /*max-width: 1000px;*/
            overflow: hidden;
        }
        .poster-panel{
            float: left;
        }
        .h2{
            font-family: "Open Sans", Arial, "Trebuchet MS", Verdana, sans-serif;
            font-weight: 500;
            font-size: 1.25rem;
            letter-spacing: 0;
            line-height: 1.2;
            padding-left: 9px;
            text-transform: uppercase;
            margin-bottom: 1em;
            width: 80%;
        }

        .viewAllButton {
            text-transform: uppercase;
            background: none!important;
            border: none;
            padding: 0!important;
            cursor: pointer;

            background-color: transparent;
            color: #3976dc;
            fill: #2a2c32;
            font-size: inherit;
            font-weight: 400;
            line-height: inherit;
            letter-spacing: inherit;
            text-decoration: none;
            cursor: pointer;
        }

    </ui:style>
    <g:HTMLPanel addStyleNames="{style.home-panel}">
        <h2 class="{style.releases-header} {style.h2}">New Releases
            <g:Button addStyleNames="{style.viewAllButton}" ui:field="viewAllBtn">View all</g:Button>
        </h2>
        <g:FlowPanel ui:field="posterPanel" addStyleNames="{style.poster-panel}">
        </g:FlowPanel>
    </g:HTMLPanel>
</ui:UiBinder>