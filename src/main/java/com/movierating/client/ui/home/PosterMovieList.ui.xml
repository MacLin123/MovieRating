<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type="com.movierating.client.ui.home.PosterMovieList.MyStyle">
        .carousel-home {
            padding-top: 100px;
        }

        .releases-header {
            text-align: left;
            margin: 0;
            width: 70%;
            max-width: 800px;
            /*margin-bottom: 7px;*/
            /*padding-top: 40px;*/
            display: inline-block;
        }

        .home-panel {
            padding-left: 16px;
            /*max-width: 1000px;*/
            overflow: hidden;
        }

        .poster-panel {
            float: left;
        }

        .h2 {
            font-size: 1.25rem;
            width: 63%;
            font-weight: 500;
        }

        .viewAllButton {
            text-transform: uppercase;
            background: none !important;
            border: none;
            padding: 0 !important;
            cursor: pointer;

            background-color: transparent;
            color: #3976dc;
            fill: #2a2c32;
            font-size: inherit;
            font-weight: 400;
            line-height: inherit;
            letter-spacing: inherit;
            text-decoration: none;
            cursor: pointer;
        }

        .glider-style {
            width: 70%;
            max-width: 920px;
            margin: 20px 0 20px 20px;
        }

        .div-header{
            font-family: "Open Sans", Arial, "Trebuchet MS", Verdana, sans-serif;
            font-size: 1.25rem;
            line-height: 1.2;
            text-transform: uppercase;

            margin-bottom: 7px;
            padding-top: 40px;
            padding-left: 20px;
        }



    </ui:style>
    <g:HTMLPanel addStyleNames="{style.home-panel}">
        <div class="{style.div-header}">
            <h2 ui:field="header" class="{style.releases-header} {style.h2}"></h2>
            <g:Button addStyleNames="{style.viewAllButton}" ui:field="viewAllBtn">View all</g:Button>
        </div>
        <div ui:field="newReleasesDiv">
        </div>
        <g:FlowPanel ui:field="posterPanel" addStyleNames="{style.poster-panel}">
        </g:FlowPanel>
    </g:HTMLPanel>
</ui:UiBinder>