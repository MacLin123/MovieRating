            <!--            </div>-->

            <!--            <div class="{style.input-group}">-->
            <!--                <g:Button ui:field="addMovieBtn" addStyleNames="{style.input-group-button}">Add</g:Button>-->
            <!--            </div>-->
        </div>
    </g:HTMLPanel>
</ui:UiBinder>