<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type="com.movierating.client.ui.admin.AdminPanel.MyStyle">
        body, html {
            font-family: 'Roboto', sans-serif;
            font-size: 16px;
            line-height: 24px;
            width: 100%;
            height: 100%;
            margin: 0;
            background-color: #FFFFFF;
        }

        img:hover {
            cursor: pointer;
        }

        ul {
            padding: 0;
            list-style-type: none;
        }

        .center {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            height: 100%;
            width: 100%;
        }

        .admin-panel {
            background-color: #FFFFFF;
            width: 100%;
            height: 80%;
            /*padding: 20px;*/
            /*box-shadow: 0 0 10px 1px #C9C9C9;*/
            /*border-radius: .25rem*/
        }

        .header {
            text-align: center;
            margin: 0;
            padding-bottom: 20px;
            padding-top: 80px;
        }

        .header2 {
            text-align: center;
            margin: 0;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .input-group {
            display: flex;
            width: 40%;
            padding-top: 20px;
            flex-direction: row;
            margin: 0 auto;
            transition: width 0.1s ease-in-out;
        }

        .input-group-text {
            width: 100%;
            padding: 10px;
            font-size: 17px;
            border: 1px solid grey;
            float: left;
            width: 80%;
            background: #f1f1f1;

        }

        .input-group-button {
            width: 100%;
            padding: 0.375rem 0.75rem;
            color: #ffffff;
            background-color: #0b7edd;
            border: none;
            border: 1px solid #0275d8;
            border-radius: 0 .25rem .25rem 0;
            cursor: pointer;
        }

        .input-group-search-button {
            float: left;
            padding: 10px;
            background: #2196F3;
            color: white;
            font-size: 17px;
            border: 1px solid grey;
            border-left: none; /* Prevent double borders */
            cursor: pointer;
        }

        .input-group-search-button:hover {
            background: #0b7dda;
            /*background-color: #025aa5;*/
            /*border-color: #01549b;*/
        }

        .input-group-button:hover {
            background-color: #025aa5;
            border-color: #01549b;
        }

        .input-group-button:active {
            background-color: #014682;
            border-color: #01315a;
        }

        .flex_table {
            /*display: inline;*/
        }

        .flex_table td {
            border-bottom: 1px solid #c9c9c9;
            padding: 10px;
        }
        .img-admin{
            width: 80px;
            height: 120px;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.center}">
        <div class="{style.admin-panel}">
            <h1 class="{style.header}">Admin Page</h1>

            <div class="{style.input-group}">
                <g:TextBox ui:field="searchByTitleTextBox" addStyleNames="{style.input-group-text}"/>
                <g:Button ui:field="searchMovieBtn" addStyleNames="{style.input-group-search-button}">Search</g:Button>
            </div>

            <g:FlexTable ui:field="movieList" addStyleNames="{style.flex_table}">
            </g:FlexTable>

            <!--            <h2 class="{style.header2}">Create Movie</h2>-->

